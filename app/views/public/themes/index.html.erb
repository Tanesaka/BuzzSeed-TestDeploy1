<% @themes.each do |theme| %>

  <%= link_to theme_path(theme.id) do %>
  <%= attachment_image_tag theme, :image %>
  <% end %>

  <p>お題by:
  <%= link_to user_path(theme.user.id) do %>
  <%= theme.user.name %>
  <% end %>
  </p>

  <p>回答数:
  <%= link_to theme_path(theme.id) do %>
  <%= theme.answers.count %>
  <% end %>
  </p>


<% end %>

<%= paginate @themes %>