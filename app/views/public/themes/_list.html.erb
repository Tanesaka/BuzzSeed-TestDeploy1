
<% themes.each do |theme| %>
 <article class="mt-4 shadow-lg">
   <%= link_to theme_path(theme.id) do %>
    <%= attachment_image_tag theme, :image, class:"card-img-top"; %>
   <% end %>
    <table class="h4">
      <tbody>
        <tr>
         <th>by:</th>
           <td>
            <%= link_to user_path(theme.user.id) do %>
             <%= theme.user.name %>
              <% end %>
           </td>
        </tr>
         <tr>
           <th><i class="fas fa-seedling"></i>:</th>
             <td>
              <%= link_to theme_path(theme.id) do %>
              <%= theme.answers.count %>
              <% end %>
             </td>
         </tr>
       </tbody>
    </table>
  </article>
<% end %>
  <div class="row">
    <div class="mx-auto mt-2">
      <%= paginate themes %>
    </div>
  </div>

