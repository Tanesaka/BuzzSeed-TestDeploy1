

<div class="containar">

<div class="row">
 <div class="col-md-5 mx-auto">
<% if answers.blank? %>
<p>まだ回答はありません。</p>
<% end %>

<% answers.each do |answer| %>
<%= link_to theme_path(answer.theme.id) do %>
<%= attachment_image_tag answer.theme, :image, class:"card-img-top"; %>
<% end %>


<h1>
  <%= link_to answer_path(answer.id) do %>
  <%= answer.content %>
  <% end %>
</h1>
<p>回答by:
<%= link_to user_path(answer.user.id) do %>
<%= answer.user.name %>
<% end %>
</p>

<!--イイね部分-->

  <% if answer.favorited_by?(current_user) %>
    <p>
      <%= link_to answer_favorites_path(answer), method: :delete do %>
        ♥<%= answer.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to answer_favorites_path(answer), method: :post do %>
        ♡<%= answer.favorites.count %> いいね
      <% end %>
    </p>

  <% end %>

<p><%= link_to "#{answer.comments.count} コメント", answer_path(answer.id) %></p>

<% end %>

<%= paginate answers %>
</div>
</div>
</div>
