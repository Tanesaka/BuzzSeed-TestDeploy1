<h2>プロフィール編集</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">ニックネーム</label>
  <%= f.text_field :name, autofocus: true, placeholder:"ニックネーム"%>

  <label for="inputName">BuzzSeed ID</label>
  <%= f.text_field :unique_code, autofocus: true, placeholder:"BuzzSeed ID"%>

    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">プロフィール画像</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <%= f.submit "変更を保存" %>
<% end %>